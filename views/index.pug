doctype html
html(lang='en')
  head
    title Wheel of Horrible Misfortune
    link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/main.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Creepster')
  body
    h1.wheel
      span(style="font-family: Creepster") Wheel of Horrible Misfortune
    .container
      #gameWord.row
        h1.theWord
      #players.row
        #pl1.col-sm-4
          h3 Player 1
          label(for='size_1') Score
          input#pl1Score(type='text', value='0')
        #missLetters.col-sm-4
          h2 Missed letters
        #pl2.col-sm-4
          h3 Player 2
          label(for='size_1') Score
          input#pl2Score(type='text', value='0')
      #spinIt.row
        .col-sm-12
          button#spin.btn.btn-primary.center-block(type='button')
            | Spin
      #gamePlay.row
        .col-sm-4
          input.center-block(type='text', id="letter" placeholder='letter' maxlength="1" pattern="[a-zA-Z]{1}")
        #choiceResponse.col-sm-4
        .col-sm-4
          input.center-block(type='text', id="word" placeholder='word')
      #guess.row
        .col-sm-4
          button#enterLetter.btn.btn-success.center-block(type='button')
            | Enter Letter
        .col-sm-4
        .col-sm-4
          button#guessWord.btn.btn-danger.center-block(type='button')
            | Guess Word
    script(src='/socket.io/socket.io.js')
    script(src='/lib/jquery/dist/jquery.min.js')
    script(src='/main.js')
